{
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true,
    "bracketSpacing": true,
    "bracketSameLine": false,
    "jsxSingleQuote": true,
    "arrowParens": "always",
    "plugins": ["@trivago/prettier-plugin-sort-imports"],
    "importOrder": [
        "^[./]",
        "^@components",
        "^@components/(.*)$",
        "^@lib/(.*)$"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
}
